{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dripsy": ["./packages/dripsy/src"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,

    "disableReferencedProjectLoad": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "exclude": ["examples/next-example/*"]
}
