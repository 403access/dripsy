{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build",
    "disableReferencedProjectLoad": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "examples", "node_modules"],
  "paths": {
    "react-native/node_modules/@types/react": ["../node_modules/@types/react"]
  }
}
